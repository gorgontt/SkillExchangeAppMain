<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SkillExchange" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blueMain</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/blueMain</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/gray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/blueDark</item>
        <!-- Customize your theme here. -->

        <item name="android:background">@color/blueDark</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:background">@drawable/button_corners</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="RegisterDialog">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/two_rounded_corners_dark</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">20dp</item>
        <item name="android:background">@drawable/rounded_corners_ed_text_dark</item>
    </style>

    <style name="ArrowIconGoStyle">
        <item name="android:tint">@color/yellowLight</item>
    </style>

    <style name="TextColor">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="RegisterBioStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:background">@drawable/two_corners_right_dark_version</item>
    </style>

    <style name="GenderButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:background">@drawable/button_stroke_radius_dark</item>
    </style>

    <style name="SearchEditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/rounded_corners_ed_text_dark</item>
    </style>

</resources>